{
  "globalEnv": [
    "PG_URL",
    "PG_CERT",
    "REDIS_URL",
    "NODE_PORT",
    "NODE_ENV",
    "GET_STREAM_API_SECRET",
    "GET_STREAM_API_KEY",
    "VITE_CORE_API_URL",
    "VITE_GOOGLE_MAPS_API_KEY"
  ],
  "tasks": {
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["codegen"],
      "outputs": ["dist/**"]
    },
    "codegen": {},
    "web#codegen": {
      "dependsOn": ["core#codegen"],
      "inputs": ["src/codegen/**"],
      "outputs": ["src/codegen/__generated__/**"]
    },
    "core#codegen": {
      "inputs": ["src/**"],
      "outputs": ["src/__generated__/**"]
    },
    "lint": {
      "inputs": ["src/**", "eslint.config.js"]
    },
    "tscheck": {
      "inputs": ["src/**", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    }
  }
}